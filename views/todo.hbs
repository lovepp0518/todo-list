{{!-- 使用flash所傳入的參數message進行顯示訊息的操作 --}}
{{#if message}}
<div>{{message}}</div>
{{/if}}
<p>
  <input type="checkbox" disabled {{#if this.isComplete}} checked {{/if}}>
  {{todo.name}}
</p>
<a href="/todos">back</a>
<a href="/todos/{{todo.id}}/edit">edit</a>
<form action="/todos/{{todo.id}}?_method=DELETE" method="POST" style="display: inline;">
  <button type="submit">delete</button>
</form>